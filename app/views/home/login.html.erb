<div id="content">
<h2>Login</h2>
<div id="signin">
	<% form_for @user,:url => "login" do |f| -%>
		<% if flash[:errors] %>
		<div class="errorExplanation">
			<%=h flash[:errors] %>
		</div>
		<% end %>
		<p>
			<%= f.label :email, "Email:" %><br />
			<%= f.text_field :email,:class => 'text' %>	
		</p>
		<p>
			<%= f.label :passwd, "Password:" %><br />
			<%= f.password_field :passwd,:class => 'text' %>	
		</p>
		 
		<div class="submit">
			<%= f.submit "Login", :disable_with => 'Submitting...', :class => 'button submit' %>
		</div>
	<% end %>
</div>
</div>

	