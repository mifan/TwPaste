<div id="content">
<h1>Editing language</h1>

<% form_for(@language) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Name:" %><br />
    <%= f.text_field :name %>
  </p>
    <p>
      <%= f.label :descrption, "Description:" %><br />
      <%= f.text_field :descrption %>
    </p>
    <p>
      <%= f.label :slug, "Slug:" %><br />
        <%= f.text_field :slug %>
    </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
</div>
<div id="right">
    <div class="box">
        <%= link_to 'Languages list', languages_path %>
    </div>
</div>