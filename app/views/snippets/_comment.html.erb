<div class="item">
  <div class="meta">
    <%= link_to (comment.user.name), :controller => "snippets", :action => "index",:login => comment.user.login %>
       at <%= time_ago_in_words(comment.created_at) %> ago said:
  </div>
  <div class="body">
    <div class="face">
      <a href="<%= url_for(:controller => "snippets", :action => "index",:login => comment.user.login) %>">
        <img src="<%= comment.user.avatar_url %>" width="48px" height="48px" alt="<%= comment.user.name %>" />
      </a>
    </div>
        <%= format_comment(comment.comment) %>
  </div>
</div>