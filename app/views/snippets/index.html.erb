<div id="content">
<h2><%= @sub_title %> <%= link_to (image_tag("feed.gif",:alt => "Subscription code",:class => "feed")), :action => "index", :type => "feed"  %></h2>
<div id="snippets">
  <div class="total">
    There have <%= @snippets_count %> pasites 
  </div>
  <%=render :partial => 'snippet' , :collection => @snippets %>
  <div class="pages">
    <%= will_paginate @snippets %>
  </div>
</div>
</div>

<div id="right">
      <div class="box">
        <label>Theme:</label><br />
		<%= select( 'theme' ,'name' ,APP_STYLES ,{:selected => 'default'} )%>
    </div>
  <% if current_user %>
  <div class="box" id="right_profile">
    <h3>Profile</h3>
    <ul>
      <li>
        <img src="<%= current_user.avatar_url %>" width="48px" height="48px" alt="<%=current_user.login %>'s face" />
      </li>   
      <li><label>Twitter Name:</label> <%=h current_user.login %></li>
      <li class="clearfix">
             <%= current_user.snippets_count %> <label>snippts</label>, <%= current_user.comments_count %> <label>comments</label>
      </li>
 
    </ul>
  </div>    
  <% end %>
  <div class="box" id="right_top_languages">    
    <h3>Top Languages</h3>
    <ul>
        <% for language in Language.find_top %>
          <li><%= link_to (h language.name), :controller => "snippets", :action => "index", :lang => language.slug %> <span class="count">(<%= language.snippets_count %>)</span></li>
        <% end %>
    </ul>
  </div>  

  <div class="box" id="right_top_users">
    <h3>Top Users</h3>
    <ul>
        <% for user in User.find_top_by_snippets_count %>
          <li><%= link_to (h user.login), :controller => "snippets", :action => "index", :login => user.login %> <span class="count">(<%= user.snippets_count %>)</span></li>
        <% end %>      
    </ul>
  </div>


        <div class="box" id="recent_comments">
        <h3>Recent Comments</h3>
        <ul>
          <% Comment.snippet_recent(10).each do |comment| %>
            <li>
              <%= link_to (truncate(comment.user.login,:length => 10)), :controller => "snippets", :action => "show", :id => comment.commentable_id %>: <%= truncate(h(comment.comment),:length => 20) %>
           </li>
          <% end %>
        </ul>
      </div>


</div>
