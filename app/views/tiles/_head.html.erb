<div class="head">
  <a id="logo" href="http://twpaste.com/" accesskey="1" title="Twitter Paste Home">Twitter Paste</a>
    <% unless current_user %>
    <ul class="navigation signout">
      <li class="navi-left"></li>
      <li><%= link_to "New", new_paste_path %></li>
      <li><%= link_to "All", pastes_path %></li>
      <li><%= link_to "Languages", languages_path %></li>
      <li><%= link_to "Login", login_path %></li>
      <li class="navi-right"></li>
    </ul>
    <% else %>
    <ul class="navigation signin">
      <li class="navi-left"></li>
      <li>
        <img alt="Avatar from Twitter" width="20" height="20" src="<%=current_user.avatar_url%>" class="inline" />
		<%= link_to current_user.login, user_path(current_user) %>
      </li>
      <li><%= link_to "New", new_paste_path %></li>
      <li><%= link_to "All", pastes_path %></li>
      <li><%= link_to "Logout", logout_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li>
      <li class="navi-right"></li>
    </ul>
   <% end %>
  </ul>
</div>